<%= form_for @availability do |f| %>
	<div class="availabilityDropdowns">
		<%= f.select :day_of_week, day_array(f.object.new_record?), {}, {class: "dayDropDown"} %>
		<%= f.select :start_hour, hour_array(f.object.new_record?) %> -
		<%= f.select :end_hour, hour_array(f.object.new_record?) %>
		<% if !f.object.new_record? %>
			<%= link_to "X", availability_path(f.object.id), {method: :delete} %>
		<% end %>
	</div>
	<%= f.submit %>
<% end %>
